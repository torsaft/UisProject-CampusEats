@page
@model Core.Pages.Products.CreateModel
<h2 class="display-4">Create Product</h2>
@if (Model.ProductDto is not null)
{
	<form method="post" class="mt-5">
		<div class="mb-3">
			Name:
			<input asp-for="ProductDto.Name" class="form-control" />
		</div>
		<div class="mb-3">
			Description:
			<input asp-for="ProductDto.Description" class="form-control" />
		</div>
		<div class="mb-3">
			Price:
			<input asp-for="ProductDto.Price" class="form-control" />
		</div>
		@* <div class="mb-3">
			Cooktime:
			<input asp-for="Product.CookTime" class="form-control" />
		</div> *@

		<button type="submit" class="btn btn-primary">Save</button>
		@foreach (var error in Model.Errors)
		{
			<div class="text-danger">
				@error
			</div>
		}
	</form>
}
