@page "{id:Guid}"
@model Core.Pages.Products.DeleteModel

	<h2 class="display-4">Delete product</h2>

@if (Model.Product is not null)
{
	<p>Do you want to delete the product <strong>@Model.Product.Name</strong>?</p>
	<form method="post" class="mt-5">
		
			<input type="hidden" asp-for="Product.Id" />
	<div>
		<button type="submit" class="btn btn-danger"><i class="bi-trash"></i> Delete</button>
		<a class="btn btn-secondary" asp-page="Index">Cancel</a>
	</div>
	</form>
}
