@page
@model Core.Pages.Products.IndexModel

<div class="text-center">

	<h1 class="display-4">Products</h1>
	<p><a asp-page="Create"><i class="bi-plus-circle"></i> New Product</a></p>
	<div class="text-left">
		<table class="table  table-striped table-hover">
			<thead>
				<tr>
					<th scope="col">Dish</th>
					<th scope="col">Description</th>
					<th scope="col" class="text-right">Price</th>
					@* <th scope="col" class="text-right">Cooktime</th> *@
					<th scope="col"></th>
					<th scope="col"></th>
				</tr>
			</thead>
			<tbody>

				@foreach (var product in Model.Products)
				{
					<tr>
						<th scope="row">@product.Name</th>
						<td>@product.Description</td>
						<td class="text-right">@product.Price.ToString("c")</td>
						@* <td class="text-right text-nowrap">@item.CookTime minutes</td> *@
						<td><a class="btn btn-primary" asp-page="Edit" asp-route-id="@product.Id"><i class="bi-pencil"></i></a>
						</td>
						<td><a class="btn btn-danger" asp-page="Delete" asp-route-id="@product.Id"><i class="bi-trash"></i></a>
						</td>
					</tr>
				}
			</tbody>
		</table>
	</div>
</div>
