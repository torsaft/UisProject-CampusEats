@page
@model CampusEats.Pages.Deliveries.UnassignedModel
@{
    ViewData["Title"] = "Deliveries";
}
<div class="text-center">

	<h2 class="display-4">Unassigned Deliveries</h2>
	<div class="text-left">
		<table class="table  table-striped table-hover">
			<thead>
				<tr>
					<th scope="col">Building</th>
					<th scope="col">Room Number</th>
					<th scope="col">Notes</th>
					<th scope="col">Tip</th>
				</tr>
			</thead>
			<tbody>
				@foreach (var delivery in Model.Deliveries)
				{
					<tr>
						<th scope="row">@delivery.Address.Building</th>
						<td>@delivery.Address.RoomNumber</td>
						<td>@delivery.Address.Notes</td>
						<td>@delivery.Status</td>
                        <td>@string.Format("{0:0.00}", delivery.Tip)</td>
						<td>
                            <form method="POST" class="mt-2">
								<button type="submit" asp-page-handler="AssignSelf" asp-route-orderId="@delivery.OrderId" class="btn btn-success">
									Assign
								</button>
							</form>
						</td>
					</tr>
				}
			</tbody>
		</table>
	</div>
</div>

