@page
@model CampusEats.Pages.Admin.EarningsModel
@{
    ViewData["Title"] = "Earnings";
}

<div class="text-center">

	<h1 class="display-4">Total Earnings</h1>
	<div class="text-left">
		<table class="table  table-striped table-hover">
			<thead>
				<tr>
					<th scope="col">Total Orders delivered or canceled</th>
					<th scope="col">Total Money Earned</th>
					<th scope="col">Total money earned for Courier</th>
				</tr>
			</thead>
			<tbody>
					<tr>
						<td>@Model.TotalDeliveries</td>
                        <td>@Model.TotalMoneyEarned.ToString("0.00")</td>
						<td>@Model.MoneyForCourier</td>
					</tr>
				
			</tbody>
		</table>
	</div>
</div>

