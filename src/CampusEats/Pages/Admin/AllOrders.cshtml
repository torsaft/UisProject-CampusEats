@page
@model CampusEats.Pages.Admin.AllOrdersModel

<div class="text-center">
    <h1 class="display-4">All Orders</h1>
    <div class="text-left">
        <a asp-page="/Admin/AllOrders" asp-route-filtered="@Model.FilterOrdersBool">See last 30 days</a>
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th scope="col">Order Date</th>
                    <th scope="col">Status</th>
                    <th scope="col">Customer</th>
                    <th scope="col">Orderline Count</th>
                    <th shope="col">Sum</th>
                    <th scope="col"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var order in Model.Orders)
                {
                    <tr>
                        <th>@order.OrderDate</th>
                        <td>@order.Status</td>
                        @if (order.Customer != null)
                        {
                            <td>@order.Customer.Email</td>
                        }
                        else
                        {
                            <td>No customer</td>
                        }
                        <td>@order.OrderLines.Count() orderlines</td>
                        <td>
                            <a class="btn btn-primary" href="/Admin/SingleOrder/@order.Id">Inspect</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
